<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login - FoxScrb</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
  <!-- Navigation Bar -->
  <%- include('navbar.ejs') %>

  <div class="container">
    <h2 class="text-center mt-5">Login</h2>

    <!-- Display Success Message Only If It Exists -->
    <% if (typeof success_msg !== 'undefined' && success_msg.length > 0) { %>
      <div class="alert alert-success"><%= success_msg %></div>
    <% } %>

    <!-- Display Error Messages -->
    <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
      <% errors.forEach(function(error) { %>
        <div class="alert alert-danger"><%= error.msg %></div>
      <% }) %>
    <% } %>

    <!-- Login Form -->
    <form action="/users/login" method="POST">
      <div class="form-group">
        <label for="email">Email</label>
        <input type="email" name="email" class="form-control" required>
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" name="password" class="form-control" required>
      </div>
      <button type="submit" class="btn main-btns">Login</button>
      <div class="text-right">
        <a href="/users/forgot-password" class="small">Forgot your password?</a>
      </div>
  
    </form>
    <div class="text-center mt-3">
      <p>Don't have an account? You can <a href="/users/register">register for free</a></p>
    </div>
  </div>

  <footer class="footer">
    <div class="container text-center">
      <h2>Get in Touch</h2>
      <div class="social-icons">
        <a href="https://www.instagram.com/_silbrum/?hl=en" target="_blank">
          <i class="fa-brands fa-instagram"></i>
        </a>
        <a href="https://github.com/SilBrum" target="_blank">
          <i class="fa-brands fa-github"></i>
        </a>
        <a href="https://www.linkedin.com/in/sicilia-brum/" target="_blank">
          <i class="fa-brands fa-linkedin"></i>
        </a>
      </div>
    </div>
  </footer>

  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</body>
</html>
