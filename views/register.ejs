<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Register - FoxScrb</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
  <!-- Navigation Bar -->
  <%- include('navbar.ejs') %>

  <!--Register form-->
  <div class="container">
    <h2 class="text-center mt-5">Register</h2>
    <% if (errors.length > 0) { %>
      <div class="alert alert-danger">
        <% errors.forEach(function(error) { %>
          <p><%= error.msg %></p>
        <% }); %>
      </div>
    <% } %>
    <form action="/users/register" method="POST">
      <div class="form-group">
        <label for="name">Name</label>
        <input type="text" name="name" class="form-control" value="<%= typeof name !== 'undefined' ? name : '' %>" required>
      </div>
      <div class="form-group">
        <label for="email">Email</label>
        <input type="email" name="email" class="form-control" value="<%= typeof email !== 'undefined' ? email : '' %>" required>
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" name="password" class="form-control" required>
      </div>
      <div class="form-group">
        <label for="password2">Confirm Password</label>
        <input type="password" name="password2" class="form-control" required>
      </div>
      <button type="submit" class="btn main-btns">Register</button>
    </form>
    <p class="text-center mt-3">Already have an account? <a href="/users/login">Login</a></p>
  </div>

  <footer class="footer">
    <div class="container text-center">
      <h2>Get in Touch</h2>
      <div class="social-icons">
        <a href="https://www.instagram.com/_silbrum/?hl=en" target="_blank">
          <i class="fa-brands fa-instagram"></i>
        </a>
        <a href="https://github.com/SilBrum" target="_blank">
          <i class="fa-brands fa-github"></i>
        </a>
        <a href="https://www.linkedin.com/in/sicilia-brum/" target="_blank">
          <i class="fa-brands fa-linkedin"></i>
        </a>
      </div>
    </div>
  </footer>

  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</body>
</html>
